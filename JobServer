import socket


sock = socket.socket(socket.AF_INET , socket.SOCK_STREAM)
host = socket.gethostname()
port = 7777
sock.bind((host,port))

sock.listen(5)
while True:
    c, addr = sock.accept()
    print ('Got connection from', addr)
    c.send("Successfully connected".encode())
    while True:
        
        
        
        
        break
        
    
    
   
